<%- include('partials/header') -%>
    <article id="home" class="panel special">
        <div class="image">
            <img src="images/pic01.png" alt="picture of random pills" data-position="center center" />
        </div>
        <div class="content">
            <div class="inner">
                <header>
                    <h1>Dubble Dose</h1>
                    <p>Keep track of your doses of medications and supplements for you or your loved ones.<br />
                    Whether it is for an illness or daily health.</p>
                </header>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form method="POST" action="/signup">
                    <div class="fields">
                        <div class="field">
                            <label for="inputUserName">User Name</label>
                            <input type="text" name="userName" id="inputUserName" value="" placeholder="User Name" >
                        </div>
                        <div class="field">
                            <label for="inputEmail">Email Address</label>
                            <input type="email" name="email" id="inputEmail" value="" placeholder="Email Address" >
                        </div>
                        <div class="field">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" value="" placeholder="Password" >
                        </div>
                        <div class="field">
                            <label for="confirmPassword">Confirm Password</label>
                            <!-- changed from email to password -->
                            <input type="password" name="confirmPassword" id="confirmPassword" value="" placeholder="Confirm Password" >
                        </div>
                        <ul class="field actions">
                            <li><input type="submit" value="Submit" class="primary" ></li>
                        </ul>
                    </div>
                 </form>
                <ul class="icons">
                    <li><a href="https://twitter.com/jomadicsoul" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                    <li><a href="https://github.com/jhladnik" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
                    <li><a href="mailto:jhladnik20@gmail.com" class="icon solid fa-envelope"><span class="label">Email</span></a></li>
                </ul>
            </div>
        </div>
    </article>
<%- include('partials/footer') -%>
